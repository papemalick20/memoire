{% block title %}'Gerer les biens!'{% endblock %}

{% block body %}

 <div class="container mt-4">
 <h1> gerer les biens</h1>
 <table class ="table table-striped">
 <thead>
  <tr>
   <th>Titre</th>
   <th>Action</th>
  </tr>
 </thead>
 <tbody>
 {% for property in properties %}
  <tr>
   <td>{{property.title}}</td>
   <td>{{property.city}}</td>
     <td>
