{% extends 'base.html.twig' %}

{% block title %}Gerer les options {% endblock %}

{% block body %}
<div class="container">
    <h1>Option index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>
                      <a href="{{ path('option_edit', {'id': option.id}) }}" class="btn btn-success">Editer</a>
                    <form method="post" action="{{ path('option_delete', {'id': option.id}) }}"style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                         <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ option.id) }}">
                         <button class="btn btn-danger">Supprimer</button>
                    </form>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('option_new') }}" class ="btn btn-primary">Create une option</a>
    </div>
{% endblock %}
